<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Please_provide_phone_field_if_industry</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Industry ,&quot;Agriculture&quot; ) ,ISBLANK(Phone) )</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Phone value needed</errorMessage>
</ValidationRule>
