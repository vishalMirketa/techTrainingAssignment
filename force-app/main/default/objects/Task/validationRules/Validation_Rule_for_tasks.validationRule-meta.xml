<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validation_Rule_for_tasks</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISPICKVAL( Status , &apos;Completed&apos;) ,ActivityDate  &gt; TODAY())</errorConditionFormula>
    <errorMessage>Status of task cannot be completed 
if Due Date is greater than today</errorMessage>
</ValidationRule>
